<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/online_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_img_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="name"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"
                 />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/_10ssp"
                android:background="@drawable/btn_chat_style"
                android:gravity="end">

                <ImageView
                    android:id="@+id/receive_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_10ssp"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:scaleType="centerInside"
                    android:src="@drawable/signbk" />
            </LinearLayout>


            <TextView
                android:id="@+id/date_img_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10ssp"
                android:text="2:20 am"
                android:textColor="@color/grey"
                android:visibility="invisible" />
        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>