<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signbk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#8A1D1C1C"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="150sp"
                android:background="@drawable/login_style"
                >


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25ssp"
                    android:fontFamily="@font/archivo_black"
                    android:text="Welcome Back"
                    android:textColor="#fff"
                    android:textSize="@dimen/_20ssp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25ssp"
                    android:layout_marginBottom="@dimen/_20ssp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/email_login"
                        android:hint="Email"
                        android:textColorHint="#fff"
                        android:layout_marginStart="@dimen/_15ssp"
                        android:layout_marginEnd="@dimen/_15ssp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:textColor="#fff"
                            android:padding="@dimen/_17ssp"
                            android:inputType="textEmailAddress"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/password_login"
                        android:hint="Password"
                        android:textColorHint="#fff"
                        android:layout_marginStart="@dimen/_15ssp"
                        android:layout_marginEnd="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_10ssp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:passwordToggleEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:padding="@dimen/_17ssp"
                            android:inputType="textPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/forgot_password_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:layout_gravity="end"
                        android:textColor="#fff"
                        android:layout_marginEnd="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:text="Forgot Password?"
                        android:layout_marginRight="@dimen/_15ssp" />



                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:background="@drawable/btn_login"
                        android:textColor="#fff"
                        android:paddingTop="@dimen/_17ssp"
                        android:paddingBottom="@dimen/_17ssp"
                        android:layout_marginStart="@dimen/_15ssp"
                        android:layout_marginEnd="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_20ssp"
                        android:layout_marginBottom="@dimen/_5ssp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="@dimen/_2ssp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:textAllCaps="false"
                            android:text="Donâ€™t have an account?"
                            android:textColor="#fff"
                            android:layout_marginLeft="@dimen/_15ssp" />

                        <Button
                            android:id="@+id/signup_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15ssp"
                            android:background="#00000000"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/_5ssp"
                            android:text="Sign up"
                            android:textColor="@color/purple_400"
                            android:gravity="start" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>